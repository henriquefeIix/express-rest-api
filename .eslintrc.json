{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "node/handle-callback-err": "off"
  },
  "ignorePatterns": [
    "src/database /**/index.js",
    "tests /**/*.spec.js"
  ]
}