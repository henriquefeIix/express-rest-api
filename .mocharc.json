{
  "slow": 75,
  "timeout": 2000,
  "require": [
    "@babel/register"
  ],
  "reporter": "mocha-jenkins-reporter",
  "reporter-option": [
    "junit_report_name=Tests",
    "junit_report_path=tests/reports/report.xml"
  ],
  "spec": [
    "tests/*.spec.js"
  ],
  "watch-files": [
    "tests/*.spec.js",
    "tests/**/*.spec.js"
  ]
}